<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.Controller"
            >

    <top>
        <Label text="This Label is in the top position"
               BorderPane.alignment="center"
               style="-fx-border-color:blue;-fx-border-width:3;-fx-border-style:dashed"/>
    </top>
    <bottom>
        <HBox spacing="10" alignment="center">
            <padding>
                <Insets bottom="10" right="10"/>
            </padding>
            <Button text="Okay" prefWidth="90" />
            <Button text="Cancel" prefWidth="90"/>
            <Button text="Help" prefWidth="90"/>
        </HBox>
    </bottom>

    <right>
        <Label text="This label is position on the right side" BorderPane.alignment="CENTER"
               style="-fx-border-color:blue;-fx-border-width:3;-fx-border-style:dashed"
        />
    </right>
    <left>
        <Label text="This label is position on the left side" BorderPane.alignment="CENTER"
               style="-fx-border-color:blue;-fx-border-width:3;-fx-border-style:dashed"
        />
    </left>
    <center>
        <Label text="This label is position in the center position" BorderPane.alignment="CENTER"
               style="-fx-border-color:blue;-fx-border-width:3;-fx-border-style:dashed"
        />
    </center>




</BorderPane>
